@model (IEnumerable<Nomenclatures.Data.Produit> Produits, IEnumerable<MatierePremiere> matierePremieres, IEnumerable<FamilleMatierePremiere> familleMatierePremieres)

<div class="text-center">
    <h1 class="display-4">RÃ©sultats Recherche</h1>


    <table class="table">
        <thead>
            <tr>
                <td>Nom</td>
                <td>Type</td>
                <td>Actions</td>
            </tr>
        </thead>
        <tbody>
        @foreach (var p in Model.Produits)
        {
            <tr>
                <td><a asp-action="Edit" asp-route-id="@p.Id">@p.Nom</a></td>
                <td>@p.GetType().Name</td>
                <td><a asp-action="Delete" asp-route-id="@p.Id" class="btn btn-primary">Supprimer</a></td>
            </tr>
        }
        @foreach (var p in Model.matierePremieres)
        {
            <tr>
                <td><a asp-action="Edit" asp-route-id="@p.Id">@p.Nom</a></td>
                <td>@p.GetType().Name</td>
                <td><a asp-action="Delete" asp-route-id="@p.Id" class="btn btn-primary">Supprimer</a></td>
            </tr>
        }
        @foreach (var p in Model.familleMatierePremieres)
        {
            <tr>
                <td><a asp-action="Edit" asp-route-id="@p.Id">@p.Nom</a></td>
                <td>@p.GetType().Name</td>
                <td><a asp-action="Delete" asp-route-id="@p.Id" class="btn btn-primary">Supprimer</a></td>
            </tr>
        }
        </tbody>
    </table>

</div>