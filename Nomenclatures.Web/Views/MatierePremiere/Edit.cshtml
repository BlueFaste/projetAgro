@model MatierePremiereViewModel

<form method="post" asp-action="Save" >
    <input type="hidden" asp-for="Id">
    <div class="form-group">
        <label asp-for="Nom"></label>
        <input class="form-control" asp-for="Nom">
        <span asp-validation-for="Nom"  class="text-warning"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea class="form-control" asp-for="Description"></textarea>
        <span asp-validation-for="Description"  class="text-warning"></span>
    </div>
    <div class="form-group">
        <label asp-for="PourcentageHumidite"></label>
        <input class="form-control" asp-for="PourcentageHumidite">
        <span asp-validation-for="PourcentageHumidite"  class="text-warning"></span>
    </div>
    <div class="form-group">
        <label asp-for="PoidsUnitaire"></label>
        <input class="form-control" asp-for="PoidsUnitaire">
        <span asp-validation-for="PoidsUnitaire"  class="text-warning"></span>

    </div>
    <div class="form-group">
        <label asp-for="DureeConservation"></label>
        <input class="form-control" asp-for="DureeConservation">
        <span asp-validation-for="DureeConservation" class="text-warning"></span>

    </div>
    <div class="form-group">
        <label asp-for="Famille"></label>
        <select class="form-control" asp-for="FamilleId" asp-items="@(new SelectList(Model.Familles,"Id","Nom"))"></select>
        <span asp-validation-for="FamilleId"  class="text-warning"></span>

    </div>
    <button type="submit" class="btn btn-primary">Enregistrer</button>
    <a asp-action="List" class="btn btn-primary">Annuler</a>
</form>

@section Scripts
{
    <partial name="_ValidationScriptsPartial">
}